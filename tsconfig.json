{
    "compilerOptions": {
        "target": "es5",
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "outDir": "lib",
        "inlineSources": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "allowJs": true,
        "resolveJsonModule": true,

        "typeRoots": [
            "./node_modules/@types",
            "./node_modules/@microsoft"
        ],
        "lib": [
            "es2017.object",
            "es2017",
            "es2016",
            "es5",
            "dom",
            "es2015.collection"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],

    "exclude": [
        "node_modules",
        "lib",
        "**/__tests__/*"
    ],
}