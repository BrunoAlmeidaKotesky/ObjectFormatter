{
    "compilerOptions": {
        "target": "es2019",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "jsx": "react",
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "suppressImplicitAnyIndexErrors": true,
        "skipLibCheck": true,
        "outDir": "./lib",
        "inlineSources": false,
        "strictNullChecks": false,
        "noUnusedLocals": false,
        "allowJs": true,
        "resolveJsonModule": true,
        "esModuleInterop":false,
        "lib": [
            "es2017.object",
            "es2017",
            "es2016",
            "es5",
            "dom",
            "es2015.collection"
        ]
    },
    "include": ["src/**/*.ts"],

    "exclude": [
        "node_modules",
        "lib",
        "**/__tests__/*"
    ],
}